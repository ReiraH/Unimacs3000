@{
    ViewBag.Title = "Home Page";
}

<div id="parent">
    <div id="bar_container"></div>
    <div id="bar_container2"></div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        setTimeout(updateBoatControlData, 10);
        var bar = new ProgressBar.Line(bar_container, {
            strokeWidth: 4,
            easing: 'easeInOut',
            duration: 500,
            color: '#FFEA82',
            trailColor: '#eee',
            trailWidth: 1,
            svgStyle: { width: '100%', height: '100%' },
            from: { color: '#FFEA82' },
            to: { color: '#ED6A5A' },
            step: (state, bar) => {
                bar.path.setAttribute('stroke', state.color);
            }
        });

        var bar2 = new ProgressBar.Line(bar_container2, {
            strokeWidth: 4,
            easing: 'easeInOut',
            duration: 500,
            color: '#FFEA82',
            trailColor: '#eee',
            trailWidth: 1,
            svgStyle: { width: '100%', height: '100%' },
            from: { color: '#FFEA82' },
            to: { color: '#ED6A5A' },
            step: (state, bar2) => {
                bar2.path.setAttribute('stroke', state.color);
            }
        });

    function updateBoatControlData() {
        var options = {};
        options.url = '@Url.Action("checkBoatData", "BoatControl")';
        options.type = "POST";
        options.dataType = "json";
        options.success = function (response) {
            if (response.result == 'UpdateData')
            {
                var leftEngineValue = response.leftEngine;
                if (leftEngineValue > 0)
                {
                    bar2.set(0);
                }
                else
                {
                    bar.set(-1);                    
                }
                setTimeout(updateBoatControlData, 100);
            }
            else if (response.result == 'DoNothing')
            {
                setTimeout(updateBoatControlData, 100);
            }
        };
        options.error = function (xhr, status, error) {
            var err = eval("(" + xhr.responseText + ")");
            alert(err.Message);
        };
        $.ajax(options)
        }
        function isFloat(n) {
            return Number(n) === n && n % 1 !== 0;
        }
    });
</script>