@model Unimacs_3000.Models.ScreenSetting



<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.screen_id)

    @Html.LabelFor(model => model.screen_id, "PC : ")
    @Html.DisplayFor(model => model.Screen.computer_name)
    @Html.ValidationMessageFor(model => model.screen_id, "")
    <br />
    @Html.DropDownList("page_id", Model.SelectListItems, htmlAttributes: new { @class = "form-control" ,@onchange = "$(this.form).submit();" })
    @Html.ValidationMessageFor(model => model.page_id, "")

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
